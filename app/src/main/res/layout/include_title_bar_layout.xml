<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#C4FFFFFF">
        <TextView
            android:id="@+id/title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/title_icon_back"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text=""
            android:textColor="#FF323232"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/title_left1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/title_left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_toRightOf="@id/title_left"
            android:gravity="center"
            android:textColor="#FF323232"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="#079E7C"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/title_right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/title_right"
            android:gravity="center"
            android:textColor="#079E7C"
            android:textSize="16sp"/>


        <LinearLayout
            android:id="@+id/title_custom_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"></LinearLayout>

        <TextView
            android:id="@+id/title_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:ellipsize="middle"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:gravity="center"
            android:textColor="#202334"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>
